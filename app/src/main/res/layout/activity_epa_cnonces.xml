<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="au.id.micolous.andprox.activities.ui.CommandRootActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="none"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="Acquire encrypted PACE nonces"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/par1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/par2Box"
            android:layout_toRightOf="@+id/par2Box"
            android:digits="0123456789ABCDEF"
            android:hint="nonce size"
            android:inputType="textCapCharacters"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/par2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/par2Box"
            android:layout_toRightOf="@+id/par2Box"
            android:digits="0123456789ABCDEF"
            android:hint="amount of nonces"
            android:inputType="textCapCharacters"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/par3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/par2Box"
            android:layout_toRightOf="@+id/par2Box"
            android:digits="0123456789ABCDEF"
            android:hint="pause time (seconds)"
            android:inputType="textCapCharacters"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/execute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Execute" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <fragment
        android:id="@+id/console"
        android:name="au.id.micolous.andprox.activities.ui.ConsoleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>